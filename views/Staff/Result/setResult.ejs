<!-- setResult.ejs -->
<%- include('../../Includes/begin.ejs') %>

<link rel="stylesheet" href="../../CSS/admin-dashboard.css">
<div class="container-fluid">
    <div id="wrapper">
        <section id="content-wrapper">
            <main role="main" class="pt-1 main">
                <div class="main-content">
                    <div class="header pb-2 pb-sm-4 pt-2 pt-lg-4 d-flex align-items-center"
                        style="height: 100px; background-size: cover; background-position: center top;"></div>
                    <div class="container mt-1">
                        <div class="row">
                            <div class="col-lg-8 offset-lg-2">
                                <div class="card bg-secondary shadow">
                                    <div class="card-header bg-white border-0">
                                        <div class="row align-items-center">
                                            <%- include('../../Includes/messages') %>
                                            <div class="col-10 ">
                                                <h3 class="mb-2" style="color: rgb(229, 71, 71);">UPDATE RESULT(GPA)</h3>
                                            </div>
                                            <% if (error) { %>
                                            <div role="alert">
                                                <%= error %>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form id="mi-form" action="/staff/setresult/<%= result.res_id %>" method="POST">
                                            <!-- Add a hidden input field to store the res_id -->
                                            <input type="hidden" name="res_id" value="<%= result.res_id %>">
                                    
                                            <div class="form-group">
                                                <label for="gpa">GPA</label>
                                                <input type="number" step="0.001" class="form-control" id="gpa" name="gpa" value="<%= result.gpa %>" required>
                                            </div>
                            
                                            <button type="submit" class="btn btn-primary">Update Result</button>
                                            <br>
                                            <br>
                                              <a href="/staff/dashboard" style="font-size: 24px; text-decoration: none; color: rgb(224, 221, 221);font-weight:100; background-color: rgb(119, 56, 244); border-radius: 5% ; border: 2px solid blueviolet;"> Back To Dashboard</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </section>
    </div>
</div>

<%- include('../../Includes/staff_end.ejs') %>
